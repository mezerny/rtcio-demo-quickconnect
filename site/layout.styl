@import 'nib'

remote_size = 70%;

html, body {
    width: 100%;
    height: 100%;
    margin: 0;
}

.container {
	font: 12px Arial, Helvetica;

	display: flex;
	flex: 1;
	width: 100%;
	height: 100%;
}

.zone {
	display: flex;

	&.remote {
		flex-basis: remote_size;
		flex-direction: column;
	}

	video {
	}
}

.chat {
	display: flex;
	flex-direction: column;
	flex: 1;
	justify-content: flex-end;

	background: #e8e8e8;
	padding: 5px;

	video {
		width: 100%;
		margin: 5px 0;
	}

	ul#messageList {
		flex: 1;

		font: 0.8em monospace;
		margin: 0;
		padding: 0;
		overflow-x: hidden;
		overflow-y: scroll;

		li {
			color: red;
			padding: 2px 0;

			&.local {
				color: black;
			}
		}
	}
}

.layout {
	display: flex;
	flex-direction: column;
	height: 100%;
	width: 100%;

	input[type="text"] {
		font-family: monospace;
		padding: 5px;
	}
}
